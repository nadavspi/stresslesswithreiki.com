@import "base";

.masthead {
    @include banner;
}

.masthead__title {
    @include adjust-font-size-to(ms(12));
}
.masthead__subtitle {
    @include adjust-font-size-to(ms(4));
    margin-bottom: 0;
}
@include at-breakpoint($mid) {
    .masthead__title {
        @include adjust-font-size-to(ms(10));
    }
    .masthead__subtitle {
        @include adjust-font-size-to(ms(3));
    }
}
@include at-breakpoint($small) {
    .masthead__title {
        @include adjust-font-size-to(ms(5));
    }
    .masthead__subtitle {
        @include adjust-font-size-to(ms(1));
    }
}


.overview {
    article {
        @include span-columns(7);    
    }
    img {
        @include span-columns(5);
        @include omega;
    }
    @include at-breakpoint($mid) {
        article, img {
            @include span-columns(8);
            @include trailer;
        }
    }
}



.testimonial {
    // @include span-columns(8);
    article {
        @include span-columns(7, 10);
    }
    img {
        @include span-columns(3, 10);
        @include omega;
    }
    @include at-breakpoint($small) {
        article {
            @include span-columns(4);
        }
        img {
            @include span-columns(2);
            @include squish(1,1);
            @include trailer;
        }
    }
}

.testimonial__invert {
    @extend .testimonial;
    article {
        @include omega;
    }
    img {
        @include remove-omega;
    }
}



.features {
    @include span-columns(12);
    article {
        @include span-columns(4);
        @include nth-omega;
    }
    @include at-breakpoint($small) {
        article {
            @include span-columns(4);
        }
    }
}



// Free video course

.kickback {
    @include banner;
    header {
        @include trailer(2);
        text-align: center;
    }
    article {
        @include span-columns(5 omega);
        @include at-breakpoint($mid) {
            @include span-columns(4);
            // @include pre(1);
        }
        @include at-breakpoint($small) {
            @include span-columns(4);
        }
    }
}

#kickback-video {
    // @include span-columns(7);
    // @include pre(1);
    // @include at-breakpoint($mid) {
    //     @include span-columns(6);
    //     @include pre(1);
    //     @include trailer(2);
    // }
    // @include at-breakpoint($small) {
    //     @include span-columns(4);
