}
iframe {
    max-width: 100%;
}
form {
    @include leader;
    @include span-columns(5 omega);
    @include at-breakpoint($mid) {
        @include span-columns(4 omega);
        @include leader(0);
    }
    @include at-breakpoint($small) {
        @include span-columns(4);
        @include leader(1);
    }
}


input {
    // margin: 0 0 20px;
    display: block;
    padding: 10px;
    // width: 250px;
    width: 90%;
    border: 1px solid #ccc;
    font-size: 1em;
}
.kickback-button {
    @include span-columns(2);
    @include leader(0.5);
    width: 150px;
}

// Reiki traning

.learn-reiki {
    @include span-columns(12);
}

.learn-reiki__body {
    @include span-columns(8);
    @include at-breakpoint($small) {
        @include span-columns(4);
    }
}

.learn-reiki__image {
    @include span-columns(4 omega);
    @include at-breakpoint($small) {
        @include span-columns(4);
    }
}

// Our Team

.our-team {
    @include span-columns(12);
    header {
        @include leader;
        text-align: center;
    }
}

.michal {
    @include squish(2, 2);
}

.member {
    @include leader(1.5);
    @include span-columns(4);
    @include nth-omega;
    header {
        text-align: left;
    }
}

@include at-breakpoint($small) {
    .michal, .member {
        @include span-columns(4);
        @include squish(0,0);
    }
}

// Classes page

.class-info {
    @include span-columns(12);
    @include big-h1;
    @include leader(0);
    &:first-child {
        @include leader(1);
    }
    h2 {
        @extend .no-trailer;
    }
    h3 {
        color: $orange;
    }
    article {
        @include span-columns(8);
    }
    aside {
        @include span-columns(4);
        @include omega;
        @include caption;
        img {
            max-width: 240px;
        }
    }
}

.class-features {
    @include leader(1);
    @include trailer;
}


// contact us 

.contact {
    @include banner;
    margin-bottom: 0;
    .container {
        @include trailer;
    }
    article {
        @include span-columns(7);
    }
    address {
        // @include leader(0.5);
        @include adjust-font-size-to(ms(3));
        // @include pre(1);
        // @include span-columns(5);
        // @include omega;
    }
    @include at-breakpoint($mid) {
        article {
            @include span-columns(4);
        }
        address {
            @include span-columns(4 omega);
            @include pre(0);
        }
    }
    @include at-breakpoint($small) {
        article, address {
            @include span-columns(4);
        }
    }
}

// footer 

footer.main {
    @include sans;
    @include adjust-font-size-to(15px);
    clear: both;
    padding: rhythm(1) 0 rhythm(2);
    width: 100%;
    // background: darken(#fafafa, 10%);
    background: $green;
    color: $tan;
    a {
        color: $terra;
        &:hover {
            color: $tan;   
        }
    }
}
.copyright {
    float: left; 
    margin-left: 8px;
}
.nadav {
 float: right;
 margin-right: 8px;
}

@include at-breakpoint($small) {
    footer.main {
        @include adjust-font-size-to(11px);
        padding: rhythm(1) 0 rhythm(4);
    }
    .copyright, .nadav {
        @include span-columns(4);
        margin-left: 8px;
    }
}

// misc



.browsehappy {
    margin: 0.2em 0;
    padding: 0.2em 0;
    background: #ccc;
    color: #000;
}